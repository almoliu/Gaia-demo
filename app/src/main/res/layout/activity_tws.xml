<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csr.gaiacontrol.activities.TWSActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/tb_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_menu"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_horizontal"
            android:layout_marginEnd="@dimen/margin_horizontal">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.csr.gaiacontrol.fragments.SpeakerFragment"
                android:id="@+id/f_master_speaker"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginBottom="@dimen/margin_vertical"
                tools:ignore="MissingPrefix"
                custom:speakerTitle="@string/tws_master" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_divider" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.csr.gaiacontrol.fragments.SpeakerFragment"
                android:id="@+id/f_slave_speaker"
                android:layout_marginTop="@dimen/margin_vertical"
                android:layout_marginBottom="@dimen/margin_vertical"
                tools:ignore="MissingPrefix"
                custom:speakerTitle="@string/tws_slave" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>