<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButton" parent="android:style/Widget.Material.Button">
        <item name="android:background">@drawable/flat_button_background</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:layout_marginBottom">@dimen/margin_bottom_title</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Subtitle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Title.Connexion">
        <item name="android:layout_marginBottom">@dimen/margin_bottom_title</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/margin_vertical_connection_title</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_connection_title</item>
        <item name="android:paddingLeft">@dimen/margin_horizontal</item>
        <item name="android:paddingRight">@dimen/margin_horizontal</item>
    </style>

    <style name="AppTheme.HeaderTitle">
        <item name="android:paddingStart">@dimen/padding_left_header_title</item>
        <item name="android:textSize">@dimen/text_size_activity_title</item>
        <item name="android:textColor">@color/activity_title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.HeaderTitle.Connection">
        <item name="android:layout_margin">@dimen/margin_horizontal</item>
        <item name="android:paddingStart">@dimen/no_padding</item>
        <item name="android:textSize">@dimen/text_size_activity_connection_title</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.HeaderSubtitle">
        <item name="android:paddingStart">@dimen/padding_left_header_subtitle</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_header_subtitle</item>
        <item name="android:textSize">@dimen/text_size_activity_subtitle</item>
        <item name="android:textColor">@color/activity_title</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:layout_marginTop">@dimen/margin_button_flat_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_button_flat_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_button_flat_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_flat_horizontal</item>
        <item name="android:paddingStart">@dimen/padding_button_flat_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_button_flat_horizontal</item>
        <item name="android:minHeight">@dimen/height_button_flat</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Flat">
        <item name="android:background">@drawable/flat_button_background</item>
        <item name="android:textColor">@drawable/flat_button_text_color</item>
    </style>

    <style name="AppTheme.Button.Flat.Group">
        <item name="android:background">@drawable/flat_button_selected_background</item>
        <item name="android:textColor">@drawable/flat_button_selected_text_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Tile">
        <item name="android:layout_margin">@dimen/margin_tiles</item>
        <item name="android:textColor">@color/text_tile</item>
        <item name="android:textSize">@dimen/text_size_tile_title</item>
    </style>

    <style name="AppTheme.Tile.Default">
        <item name="android:padding">@dimen/padding_tiles_inside</item>
    </style>

    <style name="AppTheme.Tile.Info">
        <item name="android:padding">@dimen/padding_tiles_inside_half</item>
    </style>

    <style name="AppTheme.Switch">
        <item name="android:minHeight">@dimen/height_min_touch</item>
        <item name="android:paddingStart">@dimen/padding_settings_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:textOff"> </item>
        <item name="android:textOn"> </item>
    </style>

    <style name="AppTheme.Switch.Title">
        <item name="android:layout_marginBottom">@dimen/margin_bottom_title</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/no_padding</item>
    </style>

    <style name="AppTheme.Switch.Info">
        <item name="android:textColor">@color/switch_info</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.Preset">
        <item name="android:layout_marginTop">@dimen/margin_button_flat_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_button_flat_vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_button_flat_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_button_flat_horizontal</item>
        <item name="android:paddingStart">@dimen/padding_button_flat_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_button_flat_horizontal</item>
        <item name="android:minHeight">@dimen/height_button_flat</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">@dimen/padding_button_vertical</item>
        <item name="android:background">@drawable/flat_button_preset_background</item>
    </style>

    <style name="AppTheme.SlidingTabs">
    </style>


    <style name="AppTheme.ImageButton">
        <item name="android:background">@drawable/image_button</item>
    </style>

</resources>
